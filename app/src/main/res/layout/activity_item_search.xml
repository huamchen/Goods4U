<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.goods4u.goods4u.ItemSearchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="search by name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/Search_name"
            android:hint="ObjectName" />

        <Button
            android:text="Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_search" />

        <TextView
            android:text="Search by category"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <Button
                    android:text="TextBook"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="searchByCategory"
                    android:id="@+id/button_textbook"
                    android:background="@android:color/holo_blue_bright"
                    android:textAlignment="center" />
                <Button
                    android:text="Fiction"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/button_fiction"
                    android:onClick="searchByCategory"
                    android:background="@android:color/holo_green_dark"
                    android:textAlignment="center" />
                <Button
                    android:text="Sport"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/button_sport"
                    android:onClick="searchByCategory"
                    android:background="@android:color/holo_green_dark"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:text="Phone"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/button_phone"
                    android:onClick="searchByCategory"
                    android:background="@android:color/holo_orange_dark" />

                <Button
                    android:text="computer"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/button_computer"
                    android:background="@android:color/holo_purple"
                    android:onClick="searchByCategory"
                    android:layout_width="120dp" />

                <Button
                    android:text="electronics"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/button_Elctric"
                    android:textAlignment="center"
                    android:background="@android:color/holo_purple"
                    android:onClick="searchByCategory"
                    android:layout_width="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:text="Cloth"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="searchByCategory"
                    android:id="@+id/button_cloth"
                    android:background="@android:color/holo_orange_dark" />

                <Button
                    android:text="Bag"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="searchByCategory"
                    android:id="@+id/button_bag"
                    android:background="@android:color/holo_purple" />

                <Button
                    android:text="shoe"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:onClick="searchByCategory"
                    android:id="@+id/button_shoe"
                    android:background="@android:color/holo_purple"
                    android:layout_width="match_parent" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:text="Car"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="searchByCategory"
                    android:id="@+id/button_car"
                    android:background="@android:color/holo_orange_dark" />

                <Button
                    android:text="Bicycle"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="searchByCategory"
                    android:id="@+id/button_bicycle"
                    android:background="@android:color/holo_purple" />
                <Button
                    android:text="Other"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="10dp"
                    android:onClick="searchByCategory"
                    android:id="@+id/button_other"
                    android:background="@android:color/holo_purple" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>
